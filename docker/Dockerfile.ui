# =======================================
# Stage 1: Build the React Website
# =======================================
FROM node:18-alpine as builder

WORKDIR /app

# Copy dependency files
COPY package.json package-lock.json ./

# Install dependencies
# We use --legacy-peer-deps because React Native libraries often conflict
RUN npm install --legacy-peer-deps

# Copy the source code
COPY . .

# Build the static website
# This runs whatever command is defined as "build" in your package.json
RUN npm run build

# =======================================
# Stage 2: Serve with Nginx
# =======================================
FROM nginx:alpine

# Remove default Nginx website
RUN rm -rf /usr/share/nginx/html/*

# COPY THE BUILD OUTPUT
# ---------------------------------------------------------------------------
# ⚠️ CRITICAL CHECK:
# If you use standard React, keep: /app/build
# If you use Vite, change to:      /app/dist
# If you use Expo, change to:      /app/web-build
# ---------------------------------------------------------------------------
COPY --from=builder /app/build /usr/share/nginx/html

# Copy our custom Nginx config
COPY nginx/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]
